<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="turma_android.com.br.appservico.MainActivity">

    <Button
        android:onClick="iniciarServico"
        android:text="INICIAR SERVIÇO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="pararServico"
        android:text="PARAR SERVIÇO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="vincularServico"
        android:text="VINCULAR SERVIÇO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="desvincularServico"
        android:text="DESVINCULAR SERVIÇO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
